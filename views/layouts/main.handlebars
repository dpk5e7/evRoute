<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
      evRoute
    </title>
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico" />
    <script
      src="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.js"
    ></script>
    <link
      href="https://api.mapbox.com/mapbox-gl-js/v2.10.0/mapbox-gl.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />

  </head>

  <body class="bg-secondary bg-opacity-50">
    <!-- Header -->
    <header class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand text-bg-primary" href="/">evRoute</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation -->
        <div class="collapse navbar-collapse">
          <div class="navbar-nav">
            {{#if logged_in}}
              <li class="nav-item">
                <a
                  class="nav-link text-bg-primary active"
                  href="/dashboard"
                >Dashboard</a>
              </li>
              <li class="nav-item"><a
                  class="nav-link text-bg-primary active"
                  href="/map"
                >Map</a></li>
              <li class="nav-item"><a
                  class="nav-link text-bg-primary active"
                  href="/profile"
                >Profile</a></li>
              <li class="nav-item"><a
                  class="nav-link text-bg-primary active"
                  href="/changePassword"
                >Change Password</a></li>
              {{#if is_admin}}
                <li class="nav-item"><a
                    class="nav-link text-bg-primary active"
                    href="/admin/users"
                  >User Management</a></li>
                <li class="nav-item"><a
                    class="nav-link text-bg-primary active"
                    href="/admin/ev"
                  >EV Management</a></li>
              {{/if}}
              <li class="nav-item"><a
                  class="nav-link text-bg-primary active"
                  id="logout"
                  href="#"
                >Logout</a></li>
            {{else}}
              <li class="nav-item"><a
                  class="nav-link text-bg-primary active"
                  href="/login"
                >Login</a></li>
            {{/if}}
          </div>
        </div>
      </div>

    </header>

    <!-- Main -->
    <main class="container">
      <div class="row">
        {{{body}}}
      </div>
    </main>

    <!-- Footer -->
    <footer class="text-bg-primary bg-primary p-2">
      &copy; 2022 We're Trying
    </footer>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/bootstrap.js"></script>

  </body>
</html>